---
import { SEO } from "astro-seo";
export interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;

let permalink = Astro.url.toString();
let socialImage = `${permalink}images/social.jpg`;
let socialImageAlt = "screenshot of website's Home page";
---

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: socialImage,
      url: permalink,
    },
    optional: {
      description: description,
    },
    image: {
      alt: socialImageAlt,
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: title,
    image: socialImage,
    imageAlt: socialImageAlt,
    description: description,
  }}
/>

<!-- Font preloads -->
<link
  rel="preload"
  href="/fonts/ubuntu-v20-latin-regular.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/ubuntu-v20-latin-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
